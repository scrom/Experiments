{
  "Framework": "mocha",
  "EnableTestFileBatching": true,
  "IgnoreResourceLoadingErrors": true,
  "TestFileTimeout": 10000,
  "TestHarnessLocationMode": "TestFileAdjacent",
  "TestHarnessReferenceMode": "AMD",
  "RootReferencePathMode": "SettingsFileDirectory",
  "CodeCoverageIncludes": [],
  "CodeCoverageExcludes": [],
  "CodeCoverageIgnores": [],
  "CodeCoverageExecutionMode": "Manual",
  "CodeCoverageSuccessPercentage": 20,

  "Tests": [
    {
      "Path": "test/mocha",
      "Includes": [ "*.test.js", "*.spec.js" ],
      "Excludes": []
    }
  ],

  "References": [
    {
      "Path": "server/js",
      "Includes": [ "*.js" ],
      "Excludes": []
    },
    {
      "Path": "client/js",
      "Includes": [ "*.js" ],
      "Excludes": [ "thirdparty" ]
    },
    {
      "Path": "node_modules/require/bin/require-command.js"
    },
    {
      "Path": "node_modules/mocha/bin/mocha.js"
    }
  ]
}